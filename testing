# Hoop IQ - Base Version 

#adjusted menu

def get_decade_choice():
    print("Welcome to Hoop IQ!")
    print("Select an NBA decade:")
    print("1. 2000s Quiz")
    print("2. 2010s Quiz")
    print("3. 2020s Quiz")
    print("4. View Answer Sheet")

    choice = input("Enter your choice (1-4): ")

    if choice == "1":
        return "2000s"
    elif choice == "2":
        return "2010s"
    elif choice == "3":
        return "2020s"
    elif choice == "4":
        
        show_answer_sheet()
        exit()
    else:
        print("Invalid selection. Please restart the program.")
        exit()


