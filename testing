# ----- MAIN QUIZ LOGIC ----- #

# Input Validation
# Ensures only valid choices (A,B,C,D)
# I want to have the code be more stable and not allow incorrect inputs 

def get_valid_answer():
    valid_options = ["A", "B", "C", "D"]

    while True:
        answer = input("Your answer (A-D): ").upper()
        if answer in valid_options:
            return answer
        else:
            print("Invalid input. Please enter A, B, C, or D.")

# This prints the correct answers for each decade. 
# will think about adjusting how i want this answer sheet 

def show_answer_sheet():
    print("\n========== ANSWER SHEET ==========\n")

    # -------------------------
    #          2000s
    # -------------------------
    print("2000s NBA Quiz Answers\n")

    print("1. What was Kobe Bryant's season high in points made in a single game in 2002?")
    print("   Correct Answer: C — 62\n")

    print("2. Who won the NBA championship in 2007?")
    print("   Correct Answer: A — Spurs\n")

    print("3. Who won the dunk contest in 2003?")
    print("   Correct Answer: B — Jason Richardson\n")

    print("4. Who was the #1 overall pick in 2003?") 
    print("   Correct Answer: C - Lebron James\n")

    print("5. What was Allen Iverson's season high in points in 2001?")
    print("   Correct Answer: D - 50\n")

    print("------------------------------------\n")


    # -------------------------
    #          2010s
    # -------------------------
    print("2010s NBA Quiz Answers\n")

    print("1. Who won the NBA Most Valuable Player in 2010?")
    print("   Correct Answer: A — Lebron James\n")

    print("2. How many games did the NBA Finals go to in 2016?")
    print("   Correct Answer: D — 7\n")

    print("3. What team won the NBA Championship in 2010?")
    print("   Correct Answer: A — Lakers\n")

    print("4. What was Kobe Bryant's season high in points in 2011?") 
    print("   Correct Answer: C - 48\n")

    print("5. What year did Kevin Durant win his MVP award?") 
    print("   Correct Answer: B - 2014\n")

    print("------------------------------------\n")


    # -------------------------
    #          2020s
    # -------------------------
    print("2020s NBA Quiz Answers\n")

    print("1. Which player won the MVP in 2022?")
    print("   Correct Answer: B — Joel Embiid\n")

    print("2. WHo won the Defensive Player of the Year in 2020?")
    print("   Correct Answer: B — Giannis\n")

    print("3. Who won the 6th Man of the Year in 2024?")
    print("   Correct Answer: A — Malik Monk\n")

    print("4. Who was the #1 overall pick in 2023?") 
    print("   Correct Answer: A - Victor Wembanyama\n")

    print("5. Which team played the Lakers in 2023 Western Conference Finals?") 
    print("   Correct Answer: B - Denver Nuggets\n")

    print("====================================\n")
def run_quiz(questions):
    score = 0

    print("\nStarting quiz...\n")

    for q, a, b, c, d, correct in questions:
        print(q)
        print(a)
        print(b)
        print(c)
        print(d)
        answer = get_valid_answer()

        if answer == correct:
            score += 1

    print("\nQuiz complete!")
    print(f"You scored {score} out of 5.")


# ----- PROGRAM START ----- #

decade = get_decade_choice()

if decade == "2000s":
    run_quiz(questions_2000s)
elif decade == "2010s":
    run_quiz(questions_2010s)
elif decade == "2020s":
    run_quiz(questions_2020s)
